<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ccreator.StartPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="#535353">
        <Frame BackgroundColor="#353587" VerticalOptions="EndAndExpand">
            <Image Source="Ccreator"/>
        </Frame>
        <Frame x:Name="loadWheel" BackgroundColor="#393939" CornerRadius="40" 
               HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Image Source="Load" HeightRequest="40"/>
        </Frame>
    </StackLayout>
</ContentPage>

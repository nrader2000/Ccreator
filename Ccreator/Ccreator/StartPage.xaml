<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ccreator.StartPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="#535353">
        <Frame HeightRequest="45" BackgroundColor="Transparent"/>
        <Frame BackgroundColor="#353587">
            <Image Source="Ccreator"/>
        </Frame>
        <Frame BackgroundColor="Transparent"/>
        <Frame x:Name="loadWheel" BackgroundColor="#393939" CornerRadius="40" HorizontalOptions="Center">
            <Image Source="Load" HeightRequest="40"/>
        </Frame>
        <Button x:Name="startButton" Text="Start" TextColor="White"  
                HeightRequest="60" CornerRadius="25" 
                WidthRequest="150" HorizontalOptions="Center"
                BackgroundColor="#393939" Opacity="0"
                Clicked="startButton_Clicked"/>
    </StackLayout>

</ContentPage>
